@{
    ViewData["Title"] = "Cart List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data
@using ECommerce.BAL
@model DataTable

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0"><a asp-controller="Home" asp-action="Index">Home</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">Cart</strong></div>
        </div>
    </div>
</div>
@if (Model != null && Model.Rows.Count > 0)
{
    <div class="site-section">
        <div class="container">
            <div class="row mb-5">
                <form class="col-md-12" method="post">
                    <div class="site-blocks-table">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th class="product-thumbnail">Image</th>
                                    <th class="product-name">Product</th>
                                    <th class="product-price">Price</th>
                                    <th class="product-quantity">Quantity</th>
                                    <th class="product-total">Total</th>
                                    <th class="product-remove">Remove</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (DataRow dataRow in Model.Rows)
                                {
                                    <tr>
                                        <td class="product-thumbnail">
                                            <img src="@Url.Content(dataRow["DisplayImage"].ToString())" alt="Image" class="img-fluid">
                                        </td>
                                        <td class="product-name">
                                            <h2 class="h5 text-black">@dataRow["ProductName"]</h2>
                                        </td>
                                        <td>@dataRow["Price"]</td>
                                        <td>
                                            <div class="input-group mb-3" style="max-width: 120px;">
                                                <div class="input-group-prepend">
                                                    <a class="btn btn-outline-primary" asp-area="Cart" asp-controller="Cart" asp-action="Decrement_Quantity" asp-route-productid="@Convert.ToInt32(dataRow["ProductID"])" asp-route-userid="@Convert.ToInt32(CommenVariable.UserID())">&minus;</a>
                                                </div>
                                                <lable class="form-control text-center">@dataRow["Quantity"]</lable>
                                                <div class="input-group-append">
                                                    <a class="btn btn-outline-primary" asp-area="Cart" asp-controller="Cart" asp-action="Increment_Quantity" asp-route-productid="@Convert.ToInt32(dataRow["ProductID"])" asp-route-userid="@Convert.ToInt32(CommenVariable.UserID())">&plus;</a>
                                                </div>
                                            </div>

                                        </td>
                                        <td>@(Convert.ToDouble(dataRow["Price"]) * Convert.ToDouble(dataRow["Quantity"]))</td>
                                        <td><a class="btn btn-primary btn-sm" asp-area="Cart" asp-controller="Cart" asp-action="Remove_Cart_Product" asp-route-productid="@Convert.ToInt32(dataRow["ProductID"])" asp-route-userid="@Convert.ToInt32(CommenVariable.UserID())">X</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </form>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="row mb-5">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <a class="btn btn-primary btn-sm btn-block" asp-area="Cart" asp-controller="Cart" asp-action="CartList">Update Cart</a>
                        </div>
                        <div class="col-md-6">
                            <a class="btn btn-outline-primary btn-sm btn-block" asp-area="Product" asp-controller="Product" asp-action="ShoppingProductList">Continue Shopping</a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <label class="text-black h4" for="coupon">Coupon</label>
                            <p>Enter your coupon code if you have one.</p>
                        </div>
                        <div class="col-md-8 mb-3 mb-md-0">
                            <input type="text" class="form-control py-3" id="coupon" placeholder="Coupon Code" required>
                        </div>
                        <div class="col-md-4">
                            <button class="btn btn-primary btn-sm">Apply Coupon</button>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 pl-5">
                    <div class="row justify-content-end">
                        <div class="col-md-7">
                            <div class="row">
                                <div class="col-md-12 text-right border-bottom mb-5">
                                    <h3 class="text-black h4 text-uppercase">Cart Totals</h3>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <span class="text-black">Subtotal</span>
                                </div>
                                <div class="col-md-6 text-right">
                                    <strong class="text-black">@Model.Rows[0]["CartTotal"]</strong>
                                </div>
                            </div>
                            <div class="row mb-5">
                                <div class="col-md-6">
                                    <span class="text-black">Total</span>
                                </div>
                                <div class="col-md-6 text-right">
                                    <strong class="text-black">@Model.Rows[0]["CartTotal"]</strong>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <a class="btn btn-primary btn-lg py-3 btn-block" asp-area="Checkout" asp-controller="Checkout" asp-action="Billing">Proceed To Billing</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container text-center mt-5">
        <h2>Your cart is empty</h2>
        <p>Explore our products and start adding items to your cart!</p>
        <!-- You may want to add a link to the product listing page or homepage here -->
    </div>
}