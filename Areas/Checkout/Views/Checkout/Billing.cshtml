@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using ECommerce.BAL
@model ECommerce.Areas.Address.Models.AddressModel


<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <a asp-controller="Home" asp-action="Index">Home</a> <span class="mx-2 mb-0">/</span><a asp-area="Cart" asp-controller="Cart" asp-action="CartList">Cart</a> <span class="mx-2 mb-0">/</span>  <strong class="text-black">Checkout</strong>
        </div>
    </div>
</div>
<form method="post" asp-area="Checkout" asp-controller="Checkout" asp-action="Address_Insert" asp-route-userid="@Convert.ToInt32(CommenVariable.UserID())">
    <div class="site-section">
        <div class="container">
            <div class="col-md-12 mb-5 mb-md-0">
                <h2 class="h3 mb-3 text-black">Billing Details</h2>
                <div class="p-3 p-lg-5 border">
                    <div class="form-group row">
                        <div class="col-md-12">
                            <label for="c_address" class="text-black">Address <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="c_address" asp-for="Address" placeholder="Street address" required>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-6">
                            <label for="c_state_country" class="text-black">Country <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="c_state_country" asp-for="Country">
                        </div>
                        <div class="col-md-6">
                            <label for="c_state_country" class="text-black">State <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="c_state_country" asp-for="State">
                        </div>
                        <div class="col-md-6">
                            <label for="c_state_country" class="text-black">City <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="c_state_country" asp-for="City">
                        </div>
                        <div class="col-md-6">
                            <label for="c_postal_zip" class="text-black">Posta / Zip <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="c_postal_zip" asp-for="Postal">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="row mb-5">
                    <div class="col-md-12">
                        <h2 class="h3 mb-3 mt-3 text-black">Coupon Code</h2>
                        <div class="p-3 p-lg-5 border">
                            <label for="c_code" class="text-black mb-3">Enter your coupon code if you have one</label>
                            <div class="input-group w-75">
                                <input type="text" class="form-control" id="c_code" placeholder="Coupon Code" aria-label="Coupon Code" aria-describedby="button-addon2">
                                <div class="input-group-append">
                                    <button class="btn btn-primary btn-sm" type="button" id="button-addon2">Apply</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <button class="btn btn-primary btn-lg py-3 btn-block">Checkout</button>
                </div>
            </div>
        </div>
    </div>
</form>